<div class="input-group mb-3">
    <div class="input-group-text">
        <form class="row g-1 needs-validation" action="/finish" method="post">
            <input type="hidden" name="taskID" value="<%-task.id%>" >
            <input type="hidden" name="username" value="<%=username%>" >
            <input onChange="this.form.submit()" class="form-check-input mt-0" checkbox type="checkbox">
        </form>
    </div>
    <input type="text" name="hiddenID" id="" hidden value="<%= task._id %>">
    <input type="text" disabled class="form-control underline" id="task" name="task" placeholder="<%- task.text %>" aria-label="Text input with checkbox">
    <form class="row g-1 needs-validation" action="/abandon" method="post">
        <input type="hidden" name="taskID" value="<%-task.id%>" >
        <input type="hidden" name="username" value="<%=username%>" >
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2" onclick="">Abandon</button>
    </form>
</div>